@model Final_VS1.Models.DangNhapViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Dang_Ki.cshtml";
}

<div id="loginSection" class="form-section active">
    <div class="login-container">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-11 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="card shadow">
                        <div class="card-body p-4">
                            <div class="text-center mb-4">
                                <h2 class="card-title">Đăng Nhập</h2>
                                <p class="text-muted">Vui lòng đăng nhập vào tài khoản của bạn</p>
                            </div>
                            
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger text-center">@ViewBag.Error</div>
                            }
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger text-center">@TempData["Error"]</div>
                            }
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success text-center">@TempData["Success"]</div>
                            }



                            <form asp-action="Index" asp-controller="DangNhap" method="post">
                                @Html.AntiForgeryToken()
                                @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl as string))
                                {
                                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                }
                                <div class="mb-3">
                                    <label for="loginUsername" class="form-label">Email hoặc Tên đăng nhập</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <input asp-for="Username" class="form-control" id="loginUsername" required />
                                    </div>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="loginPassword" class="form-label">Mật khẩu</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <input asp-for="Password" type="password" class="form-control" id="loginPassword" required />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">Đăng Nhập</button>
                                </div>
                            </form>

                            <div class="text-center my-1">
                                <span class="text-muted">hoặc</span>
                            </div>                          
                            <!--Nút đăng nhập Google -->
                            <div class="d-grid mb-3">
                                <a asp-action="DangNhapGoogle" asp-route-returnUrl="@ViewBag.ReturnUrl" 
                                class="btn btn-outline-secondary btn-lg rounded-4 border-2 d-flex align-items-center justify-content-center py-3 text-decoration-none position-relative overflow-hidden"
                                style="transition: all 0.2s ease;"
                                onmouseover="this.style.background='linear-gradient(to right, #fef2f2, #fff7ed)'; this.style.borderColor='#fca5a5'; this.style.boxShadow='0 4px 6px -1px rgba(0, 0, 0, 0.1)';"
                                onmouseout="this.style.background=''; this.style.borderColor='#dee2e6'; this.style.boxShadow='';">
                                    <svg class="me-3" style="width: 20px; height: 20px;" viewBox="0 0 24 24">
                                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                    </svg>
                                    <span class="fw-medium" style="font-size: 0.875rem;">Đăng nhập với Google</span>
                                </a>
                            </div>

                            <div class="text-center mt-3">
                                <a asp-controller="Quen_MK" asp-action="Index" class="text-decoration-none">Quên mật khẩu?</a>
                            </div>
                            <div class="text-center mt-2">
                                <span class="text-muted">Chưa có tài khoản? </span>
                                <a asp-controller="DangKi" asp-action="Index" class="text-decoration-none">Đăng ký ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

