@model List<Final_VS1.Data.TaiKhoan>
@{
    ViewData["Title"] = "QUẢN LÝ NHÂN VIÊN";
    ViewData["PageTitle"] = "QUẢN LÝ NHÂN VIÊN";
    ViewData["SearchPlaceholder"] = "Tìm kiếm nhân viên...";
}

<link rel="stylesheet" href="~/css/Admin/nhanvien-list.css" asp-append-version="true" />

<div class="container-fluid py-4 staff-page">
    <div class="card glassy-header mb-4">
        <div class="card-body d-flex flex-wrap align-items-center justify-content-between gap-3">
            <div>
                <div class="text-muted small mb-1">Bảng điều khiển</div>
                <h4 class="mb-0 fw-bold text-success d-flex align-items-center gap-2">
                    <i class="fas fa-user-gear"></i> Quản lý nhân viên
                </h4>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-light border" href="@Url.Action("Index", "Nguoidung")">
                    <i class="fas fa-users me-2"></i>Khách hàng
                </a>
                <a class="btn btn-success" href="@Url.Action("ThemNhanVien", "Nguoidung")">
                    <i class="fas fa-plus me-2"></i>Thêm nhân viên
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header staff-card-header">
            <div class="d-flex align-items-center flex-wrap gap-3">
                <h5 class="mb-0 fw-bold text-white d-flex align-items-center gap-2">
                    <i class="fas fa-user-tie"></i> Danh sách nhân viên
                </h5>
                <span class="chip chip-soft">@Model.Count nhân viên</span>
            </div>
            <div class="d-flex align-items-center flex-wrap gap-2 mt-3 mt-lg-0">
                <div class="input-icon-wrapper">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo tên, email...">
                </div>
                <select id="statusFilter" class="form-select w-auto">
                    <option value="">Tất cả trạng thái</option>
                    <option value="true">Hoạt động</option>
                    <option value="false">Bị khóa</option>
                </select>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 staff-table" id="staffTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Avatar</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày tham gia</th>
                            <th>Trạng thái</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staff in Model)
                        {
                            <tr onclick="window.location.href='@Url.Action("Detail", "Nguoidung", new { id = staff.IdTaiKhoan })'">
                                <td><span class="badge bg-light text-dark">#@staff.IdTaiKhoan</span></td>
                                <td>
                                    <div class="avatar-stack">
                                        @if (!string.IsNullOrEmpty(staff.AnhDaiDien))
                                        {
                                            <img src="@staff.AnhDaiDien" alt="Avatar" class="user-avatar">
                                        }
                                        else
                                        {
                                            <div class="user-avatar placeholder">
                                                <span>@(string.IsNullOrWhiteSpace(staff.HoTen) ? "NV" : new string(staff.HoTen.Split(' ').Select(s => s[0]).Take(2).ToArray()))</span>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-semibold">@(staff.HoTen ?? "Chưa cập nhật")</div>
                                    <div class="text-muted small">@(staff.GioiTinh ?? "-")</div>
                                </td>
                                <td class="text-truncate">@staff.Email</td>
                                <td>@(staff.SoDienThoai ?? "Chưa có")</td>
                                <td>
                                    @if (staff.NgayTao.HasValue)
                                    {
                                        <div>@staff.NgayTao.Value.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">@staff.NgayTao.Value.ToString("HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không rõ</span>
                                    }
                                </td>
                                <td>
                                    @if (staff.TrangThai == true)
                                    {
                                        <span class="badge status active">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge status locked">Bị khóa</span>
                                    }
                                </td>
                                <td class="text-end" onclick="event.stopPropagation();">
                                    @if (staff.TrangThai == true)
                                    {
                                        <button class="btn btn-sm btn-outline-warning" onclick="toggleUserStatus(@staff.IdTaiKhoan)" title="Khóa tài khoản">
                                            <i class="fas fa-lock"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-success" onclick="toggleUserStatus(@staff.IdTaiKhoan)" title="Mở khóa tài khoản">
                                            <i class="fas fa-lock-open"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <span class="text-muted">Hiển thị <strong id="currentCount">@Model.Count</strong> / <strong>@Model.Count</strong> nhân viên</span>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Admin/nhanvien-list.js" asp-append-version="true"></script>
    <script>
        function toggleUserStatus(userId) {
            if (!confirm('Bạn có chắc muốn thay đổi trạng thái tài khoản này?')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("ToggleStatus", "Nguoidung")',
                type: 'POST',
                data: {
                    id: userId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra khi thay đổi trạng thái tài khoản!');
                }
            });
        }
    </script>
    @Html.AntiForgeryToken()
}
