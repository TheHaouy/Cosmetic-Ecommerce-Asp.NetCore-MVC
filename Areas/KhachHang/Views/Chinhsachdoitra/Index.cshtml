    .guide-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 1.5rem;
    }
    
    .guide-header {
        text-align: center;
        margin-bottom: 2rem;
        background: var(--nature-green);
        color: white;
        padding: 1.5rem;
        border-radius: 8px;
    }
    
    .guide-header h1 {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .guide-header p {
        font-size: 1rem;
        margin: 0;
    }
    
    .step-section {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin-bottom: 1.5rem;
