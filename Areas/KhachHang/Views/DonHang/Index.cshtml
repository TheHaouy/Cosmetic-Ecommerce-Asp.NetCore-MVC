@section Scripts {
    <script>
        // Hàm xem chi tiết đơn hàng
        function viewOrderDetails(orderId) {
            window.location.href = '@Url.Action("Details", "DonHang", new { area = "KhachHang" })/' + orderId;
        }

        // Function hủy đơn hàng
        function cancelOrder(orderId, event) {
            // Ngăn event bubbling để không trigger viewOrderDetails
            if (event) {
                event.stopPropagation();
            }
            
            if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')) {
                fetch('@Url.Action("CancelOrder", "DonHang", new { area = "KhachHang" })', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ Id: orderId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('success', 'Hủy đơn hàng thành công');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showNotification('error', data.message || 'Có lỗi xảy ra khi hủy đơn hàng');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('error', 'Có lỗi xảy ra khi hủy đơn hàng');
                });
            }
        }

        // Function hiển thị thông báo
        function showNotification(type, message) {
            const container = document.getElementById('notificationContainer');
            if (!container) return;

            const notification = document.createElement('div');
            notification.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            container.appendChild(notification);

            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }

        // Đảm bảo chiều cao được điều chỉnh đúng sau khi trang load
        document.addEventListener('DOMContentLoaded', function() {
            // Loại bỏ các CSS height có thể ảnh hưởng
            const elements = document.querySelectorAll('.main-container, .main-container .row, .main-container .col-md-9, .main-container .col-lg-9, .main-container .p-4, .main-container .card, .main-container .card-body, #ordersContainer');
            
            elements.forEach(function(element) {
                element.style.height = 'auto';
                element.style.minHeight = 'auto';
                element.style.maxHeight = 'none';
            });
        });
    </script>
}