@model List<Final_VS1.Data.DonHang>
@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
    ViewData["PageTitle"] = "Quản Lý Đơn Hàng";
}

<div class="container-fluid fade-in">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">
                        <i class="fas fa-shopping-cart me-2"></i>Danh Sách Đơn Hàng
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Filter Controls -->
            <div class="row mb-3 filter-controls">
                <div class="col-md-4">
                    <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo mã đơn, khách hàng...">
                </div>
                <div class="col-md-3">
                    <select id="statusFilter" class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        <option value="Chờ xác nhận">Chờ xác nhận</option>
                        <option value="Đã xác nhận">Đã xác nhận</option>
                        <option value="Đang giao hàng">Đang giao hàng</option>
                        <option value="Hoàn thành">Hoàn thành</option>
                        <option value="Đã hủy">Đã hủy</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="date" id="dateFilter" class="form-control">
                </div>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="orderTable">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr class="clickable-row">
                                <td><strong>#@order.IdDonHang</strong></td>
                                <td>
                                    @(order.IdTaiKhoanNavigation?.HoTen ?? "Khách")
                                    <br>
                                    <small class="text-muted">@order.IdTaiKhoanNavigation?.Email</small>
                                </td>
                                <td>
                                    @order.NgayDat?.ToString("dd/MM/yyyy")
                                    <br>
                                    <small class="text-muted">@order.NgayDat?.ToString("HH:mm")</small>
                                </td>
                                <td class="fw-bold" style="color: var(--primary-color);">@((order.TongTien ?? 0).ToString("N0"))₫</td>
                                <td>
                                    @{
                                        var badgeClass = order.TrangThai switch
                                        {
                                            "Chờ xác nhận" => "bg-warning",
                                            "Đã xác nhận" => "bg-info",
                                            "Đang giao hàng" => "bg-primary",
                                            "Hoàn thành" => "bg-success",
                                            "Đã hủy" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@order.TrangThai</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Detail", "Donhang", new { id = order.IdDonHang })" 
                                       class="btn btn-sm btn-outline-primary btn-action" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination Info -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <span class="text-muted">Hiển thị <strong id="currentCount">@Model.Count</strong> / <strong>@Model.Count</strong> đơn hàng</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Filter functionality
            function filterTable() {
                var searchValue = $('#searchInput').val().toLowerCase();
                var statusValue = $('#statusFilter').val();
                var dateValue = $('#dateFilter').val();

                var count = 0;

                $('#orderTable tbody tr').each(function() {
                    var row = $(this);
                    var text = row.text().toLowerCase();
                    var status = row.find('.badge').text().trim();
                    var dateText = row.find('td:nth-child(3)').text();

                    var matchSearch = searchValue === '' || text.includes(searchValue);
                    var matchStatus = statusValue === '' || status === statusValue;
                    var matchDate = dateValue === '' || dateText.includes(formatDate(dateValue));

                    if (matchSearch && matchStatus && matchDate) {
                        row.show();
                        count++;
                    } else {
                        row.hide();
                    }
                });

                $('#currentCount').text(count);
            }

            function formatDate(dateString) {
                var date = new Date(dateString);
                var day = String(date.getDate()).padStart(2, '0');
                var month = String(date.getMonth() + 1).padStart(2, '0');
                var year = date.getFullYear();
                return day + '/' + month + '/' + year;
            }

            $('#searchInput, #statusFilter, #dateFilter').on('keyup change', function() {
                filterTable();
            });
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/NhanVien/donhang-list.css" asp-append-version="true" />
}
