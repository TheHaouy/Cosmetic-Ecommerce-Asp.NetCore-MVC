@model List<Final_VS1.Data.SanPham>
@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
    ViewData["PageTitle"] = "Danh Sách Sản Phẩm";
}

<div class="container-fluid fade-in">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-box me-2"></i>Danh Sách Sản Phẩm (Chỉ xem)
            </h5>
            <!-- View Toggle Buttons -->
            <div class="btn-group" role="group" aria-label="View toggle">
                <button type="button" class="btn btn-outline-light btn-sm view-toggle" data-view="list" title="Xem dạng danh sách">
                    <i class="fas fa-list"></i>
                </button>
                <button type="button" class="btn btn-outline-light btn-sm view-toggle active" data-view="grid" title="Xem dạng lưới">
                    <i class="fas fa-th"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <!-- Filter Controls -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm sản phẩm...">
                </div>
                <div class="col-md-3">
                    <select id="categoryFilter" class="form-select">
                        <option value="">Tất cả danh mục</option>
                        @foreach (var cat in Model.Select(p => p.IdDanhMucNavigation).Distinct().Where(c => c != null))
                        {
                            <option value="@cat!.TenDanhMuc">@cat.TenDanhMuc</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="stockFilter" class="form-select">
                        <option value="">Tất cả tồn kho</option>
                        <option value="low">Sắp hết (< 10)</option>
                        <option value="medium">Vừa phải (10-50)</option>
                        <option value="high">Còn nhiều (> 50)</option>
                    </select>
                </div>
            </div>

            <!-- LIST VIEW -->
            <div id="listView" class="view-container" style="display: none;">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th style="width: 60px;">ID</th>
                                <th style="width: 80px;">Hình ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th style="width: 150px;">Danh mục</th>
                                <th style="width: 120px;">Giá</th>
                                <th style="width: 100px;">Tồn kho</th>
                                <th style="width: 100px;">Trạng thái</th>
                                <th style="width: 80px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                var mainImage = product.AnhSanPhams.FirstOrDefault()?.DuongDan ?? "/images/noimage.jpg";
                                var totalStock = product.BienTheSanPhams.Sum(bt => bt.SoLuongTonKho ?? 0);
                                var minPrice = product.BienTheSanPhams.Any() ? product.BienTheSanPhams.Min(bt => bt.GiaBan ?? 0) : 0;
                                var badgeClass = totalStock > 10 ? "bg-success" : totalStock > 0 ? "bg-warning text-dark" : "bg-danger";

                                <tr class="product-item" 
                                    data-category="@(product.IdDanhMucNavigation?.TenDanhMuc ?? "")"
                                    data-stock="@totalStock">
                                    <td class="text-center">
                                        <strong style="color: var(--primary-color);">#@product.IdSanPham</strong>
                                    </td>
                                    <td class="text-center">
                                        <img src="@mainImage" alt="@product.TenSanPham" 
                                             class="rounded" style="width: 50px; height: 50px; object-fit: cover;"
                                             onerror="this.src='/images/noimage.jpg'">
                                    </td>
                                    <td>
                                        <strong>@product.TenSanPham</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="fas fa-tag me-1"></i>@(product.IdDanhMucNavigation?.TenDanhMuc ?? "Chưa phân loại")
                                        </span>
                                    </td>
                                    <td>
                                        <strong style="color: var(--primary-color);">@minPrice.ToString("N0")₫</strong>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @badgeClass">@totalStock</span>
                                    </td>
                                    <td class="text-center">
                                        @if (product.TrangThai == true)
                                        {
                                            <span class="badge bg-success">Đang bán</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Ngừng bán</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("ChiTiet", "Sanpham", new { id = product.IdSanPham })" 
                                           class="btn btn-outline-primary btn-sm" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- GRID VIEW -->
            <div id="gridView" class="view-container">
                <div class="row g-4">
                    @foreach (var product in Model)
                    {
                        var mainImage = product.AnhSanPhams.FirstOrDefault()?.DuongDan ?? "/images/noimage.jpg";
                        var totalStock = product.BienTheSanPhams.Sum(bt => bt.SoLuongTonKho ?? 0);
                        var minPrice = product.BienTheSanPhams.Any() ? product.BienTheSanPhams.Min(bt => bt.GiaBan ?? 0) : 0;

                        <div class="col-xl-3 col-lg-4 col-md-6 product-item" 
                             data-category="@(product.IdDanhMucNavigation?.TenDanhMuc ?? "")"
                             data-stock="@totalStock">
                            <div class="card h-100 hover-lift">
                                <div class="position-relative">
                                    <img src="@mainImage" class="card-img-top" alt="@product.TenSanPham" 
                                         style="height: 200px; object-fit: cover;"
                                         onerror="this.src='/images/noimage.jpg'">
                                    @if (product.TrangThai == false)
                                    {
                                        <span class="position-absolute top-0 end-0 m-2 badge bg-secondary">Ngừng bán</span>
                                    }
                                    else if (totalStock < 10)
                                    {
                                        <span class="position-absolute top-0 end-0 m-2 badge bg-danger">Sắp hết</span>
                                    }
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title text-truncate" title="@product.TenSanPham">@product.TenSanPham</h6>
                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-tag"></i> @(product.IdDanhMucNavigation?.TenDanhMuc ?? "Chưa phân loại")
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold" style="color: var(--primary-color);">@minPrice.ToString("N0")₫</span>
                                        <span class="badge bg-info">Kho: @totalStock</span>
                                    </div>
                                </div>
                                <div class="card-footer bg-white border-0">
                                    <a href="@Url.Action("ChiTiet", "Sanpham", new { id = product.IdSanPham })" 
                                       class="btn btn-outline-primary btn-sm w-100">
                                        <i class="fas fa-eye me-1"></i>Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-box-open fa-3x mb-3 text-gradient"></i>
                    <p>Chưa có sản phẩm nào</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .product-item {
            transition: opacity 0.3s;
        }
        
        .card-img-top {
            border-radius: 15px 15px 0 0;
        }
        
        .view-toggle {
            border-color: rgba(255,255,255,0.5) !important;
            color: rgba(255,255,255,0.8) !important;
        }
        
        .view-toggle:hover {
            background-color: rgba(255,255,255,0.2) !important;
            border-color: white !important;
            color: white !important;
        }
        
        .view-toggle.active {
            background-color: white !important;
            border-color: white !important;
            color: var(--primary-color, #4b8b5a) !important;
        }
        
        .hover-lift {
            transition: all 0.3s ease;
        }
        
        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // View toggle functionality
            $('.view-toggle').on('click', function() {
                var view = $(this).data('view');
                
                // Update button states
                $('.view-toggle').removeClass('active');
                $(this).addClass('active');
                
                // Toggle views
                if (view === 'list') {
                    $('#listView').show();
                    $('#gridView').hide();
                } else {
                    $('#listView').hide();
                    $('#gridView').show();
                }
                
                // Save preference
                localStorage.setItem('nhanvienProductView', view);
            });
            
            // Restore saved preference
            var savedView = localStorage.getItem('nhanvienProductView');
            if (savedView === 'list') {
                $('.view-toggle[data-view="list"]').click();
            }
            
            // Filter functionality
            function filterProducts() {
                var searchValue = $('#searchInput').val().toLowerCase();
                var categoryValue = $('#categoryFilter').val();
                var stockValue = $('#stockFilter').val();

                $('.product-item').each(function() {
                    var $item = $(this);
                    var text = $item.text().toLowerCase();
                    var category = $item.data('category');
                    var stock = parseInt($item.data('stock'));

                    var matchSearch = searchValue === '' || text.includes(searchValue);
                    var matchCategory = categoryValue === '' || category === categoryValue;
                    var matchStock = true;

                    if (stockValue === 'low') matchStock = stock < 10;
                    else if (stockValue === 'medium') matchStock = stock >= 10 && stock <= 50;
                    else if (stockValue === 'high') matchStock = stock > 50;

                    if (matchSearch && matchCategory && matchStock) {
                        $item.show();
                    } else {
                        $item.hide();
                    }
                });
            }

            $('#searchInput, #categoryFilter, #stockFilter').on('keyup change', filterProducts);
        });
    </script>
}
